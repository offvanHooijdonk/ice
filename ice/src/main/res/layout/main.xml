<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:text="" />

        <TextView
            android:id="@+id/textDate"
            style="@style/AppBaseTheme.DatePickerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/requestDate" />

        <CheckBox
            android:id="@+id/checkBoxCommercial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/commercial" />

        <Button
            android:id="@+id/buttonStorehouses"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="onclick"
            android:text="@string/storehouses" />

        <TextView
            android:id="@+id/textViewStorehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <EditText
            android:id="@+id/editTextContrAgentFilter"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/textHintContrAgentFilter"
            android:inputType="text"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonContrAgentsDialog"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="onclick"
            android:text="@string/contrAgents" />

        <TextView
            android:id="@+id/textViewContrAgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textViewContrAgentRelationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <EditText
            android:id="@+id/editTextSalespointsFilter"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/textHintSalespointsFilter"
            android:inputType="text"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonSalespoints"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="onclick"
            android:text="@string/salesPoints" />

        <TextView
            android:id="@+id/textViewSalePoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="" />

        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/textHintComment"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layoutProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextProductFilter"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/textHintProductFilter"
                    android:inputType="text"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/checkBoxProductFilterType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:text="@string/numbersOnly" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonAddProduct"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="onclick"
                android:text="@string/addProduct" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:text="" />

        <Button
            android:id="@+id/buttonSendRequest"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="onclick"
            android:text="@string/sendRequest" />

    </LinearLayout>
</ScrollView>
