<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/layoutMain"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:background="#575C56">


        <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="20dp">
        </TextView>

        <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_gravity="left|center_vertical"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxCommercial"
                android:text="@string/commercial"
                android:layout_marginBottom="20dp">
        </CheckBox>


        <Button
                android:id="@+id/buttonStorehouses"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/storehouses"
                android:onClick="onclick">
        </Button>

        <TextView
                android:id="@+id/textViewStorehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
        </TextView>

        <EditText
                android:id="@+id/editTextContrAgentFilter"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/textHintContrAgentFilter"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

        <Button
                android:id="@+id/buttonContrAgentsDialog"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/contrAgents"
                android:onClick="onclick">
        </Button>

        <TextView
                android:id="@+id/textViewContrAgent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
        </TextView>

        <TextView
                android:id="@+id/textViewContrAgentRelationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
        </TextView>


        <EditText
                android:id="@+id/editTextSalespointsFilter"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/textHintSalespointsFilter"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

        <Button
                android:id="@+id/buttonSalespoints"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/salesPoints"
                android:onClick="onclick">
        </Button>

        <TextView
                android:id="@+id/textViewSalePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="30dp">
        </TextView>

        <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/commentEditText"
                android:layout_marginBottom="20dp"
                android:hint="@string/textHintComment"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>


        <LinearLayout
                android:id="@+id/layoutProducts"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                <EditText
                        android:id="@+id/editTextProductFilter"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/textHintProductFilter"
                        android:textSize="14sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_gravity="center_vertical">
                </EditText>

                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Только цифры"
                        android:id="@+id/checkBoxProductFilterType"
                        android:checked="true"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <Button
                    android:id="@+id/buttonAddProduct"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/addProduct"
                    android:onClick="onclick"
                    android:layout_marginTop="20dp"
                    >
            </Button>
        </LinearLayout>

        <TextView
                android:id="@+id/textViewFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp">
        </TextView>

        <Button
                android:id="@+id/buttonSendRequest"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/sendRequest"
                android:onClick="onclick"
                android:layout_marginTop="20dp">
        </Button>

    </LinearLayout>
</ScrollView>
