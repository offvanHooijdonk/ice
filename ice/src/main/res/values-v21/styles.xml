<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/customActionBar</item>
    </style>

    <style name="customActionBar" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@color/action_bar_indigo</item>
        <item name="android:titleTextStyle">@style/customTheme.ActionBar.Text</item>
    </style>

    <style name="customTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/actionBarTextColor</item>
    </style>
</resources>