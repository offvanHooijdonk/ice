<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="username"
        android:summary="Имя менеджера в БД"
        android:title="Пользователь"/>
    <EditTextPreference
        android:key="storehouseDefaultCode"
        android:summary="Код склада по умолчанию"
        android:title="Код склада" />
    <EditTextPreference
        android:defaultValue="80.249.87.247/AndroidExchange/New/"
        android:key="androidExchangeNewDirPref"
        android:summary="Адрес папки для новых запросов"
        android:title="Адрес папки" />
    <EditTextPreference
        android:defaultValue="80.249.87.247/AndroidExchange/Out/"
        android:key="androidExchangeOutDirPref"
        android:summary="Адрес папки для ответов базы данных"
        android:title="Адрес папки" />
    <EditTextPreference
        android:defaultValue="80.249.87.247/AndroidExchange/Pub/"
        android:key="androidExchangePubDirPref"
        android:summary="Адрес папки для выгрузки информации из БД"
        android:title="Адрес папки" />
    <EditTextPreference
        android:defaultValue="80.249.87.247/AndroidExchange/apk/"
        android:key="androidExchangeApkDirPref"
        android:summary="Адрес папки обновлений приложения"
        android:title="Адрес папки" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="updateNotificationsEnabled"
        android:summary="Включить оповещения об обновлениях файлов БД (оповещения о заявках приходят в любом случае)"
        android:title="Оповещения об обновлениях" />

    <PreferenceCategory
        android:key="catDB"
        android:title="База данных заявок"
        android:summary="Настройки подключения к удалённой базе заявок">

        <EditTextPreference
            android:key="host"
            android:title="Хост (IP/имя)"
            android:defaultValue="192.168.1.3"/>

        <EditTextPreference
            android:key="port"
            android:title="Порт"
            android:inputType="number"
            android:defaultValue="1433"/>

        <EditTextPreference
            android:key="baseName"
            android:title="Имя базы"
            android:defaultValue="ice"/>

        <EditTextPreference
            android:key="usernameDB"
            android:title="Имя пользователя в базе"
            android:defaultValue="sa"
            android:summary="Не связано с именем менеджера в приложении"/>

        <EditTextPreference
            android:key="password"
            android:title="Пароль"
            android:inputType="textPassword"
            android:defaultValue="0"/>
    </PreferenceCategory>

</PreferenceScreen>