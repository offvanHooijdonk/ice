<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="username"
        android:summary="@string/pref_manager_db_summ"
        android:title="@string/pref_manager_db"/>
    <EditTextPreference
        android:key="storehouseDefaultCode"
        android:summary="@string/pref_default_storehouse_summ"
        android:title="@string/pref_default_storehouse_title"/>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="updateNotificationsEnabled"
        android:summary="@string/pref_notif_enable_summ"
        android:title="@string/pref_notif_enable_title"/>

    <PreferenceScreen
        android:key="screen_sys_opt"
        android:summary="@string/pref_screen_sys_options_summ"
        android:title="@string/pref_screen_sys_options_title"
        android:persistent="false">
        <EditTextPreference
            android:defaultValue="80.249.87.247/AndroidExchange/New/"
            android:key="androidExchangeNewDirPref"
            android:summary="Адрес папки для новых запросов"
            android:title="Адрес папки"/>
        <EditTextPreference
            android:defaultValue="80.249.87.247/AndroidExchange/Out/"
            android:key="androidExchangeOutDirPref"
            android:summary="Адрес папки для ответов базы данных"
            android:title="Адрес папки"/>
        <EditTextPreference
            android:defaultValue="80.249.87.247/AndroidExchange/Pub/"
            android:key="androidExchangePubDirPref"
            android:summary="Адрес папки для выгрузки информации из БД"
            android:title="Адрес папки"/>

        <EditTextPreference
            android:defaultValue="30"
            android:key="exchangeFrequency"
            android:summary="@string/pref_exchange_frequency_summ"
            android:title="@string/pref_exchange_frequency_title"
            android:inputType="number"/>

        <EditTextPreference
            android:defaultValue="80.249.87.247/AndroidExchange/apk/"
            android:key="androidExchangeApkDirPref"
            android:summary="@string/pref_apk_update_folder_summ"
            android:title="@string/pref_apk_update_folder"/>

        <PreferenceCategory
            android:key="catDB"
            android:summary="@string/pref_cat_DB_options_summ"
            android:title="@string/pref_cat_DP_options_title">

            <EditTextPreference
                android:defaultValue="80.249.87.247"
                android:key="host"
                android:title="@string/pref_db_host_title"/>

            <EditTextPreference
                android:defaultValue="41433"
                android:inputType="number"
                android:key="port"
                android:title="@string/pref_db_port_title"/>

            <EditTextPreference
                android:defaultValue="ingmanXchange"
                android:key="baseName"
                android:title="@string/pref_db_name_title"/>

            <EditTextPreference
                android:defaultValue="androidXchange"
                android:key="usernameDB"
                android:summary="@string/pref_db_username_summ"
                android:title="@string/pref_db_username_title"/>

            <EditTextPreference
                android:defaultValue="androidXchangeIngman759153!"
                android:inputType="textPassword"
                android:key="password"
                android:title="@string/pref_db_password_title"/>
        </PreferenceCategory>
    </PreferenceScreen>

</PreferenceScreen>